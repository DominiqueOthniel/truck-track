    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.19",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
